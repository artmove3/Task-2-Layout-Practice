.form_elements
    .input_samples_and_buttons
        .input_samples
            .card__input 
                .input__title 
                    h3 Text Field
                    h3 Default
                label(for="default")
                    .input__container
                        input(id="default" type="text" placeholder="Email")
            .card__input_active 
                .input__title 
                    h3 Text Field
                    h3 Hover / Focus
                label(for="active")
                    .input__container
                        input(id="active" type="text" value="This is pretty awesome")
                            
            .card__guests
                    .input__title
                        h3 Dropdown
                    .input__container
                        .guests
                            p Сколько гостей
                        label.button__expand(for="guests")
                            include ../../assets/arrows/expand.svg
            .card__birthday
                    .input__title 
                        h3 masked text field
                    label(for="birthday")
                        .input__container
                            input(id="birthday" type="number", name="birthday" placeholder="ДД.ММ.ГГГГ" disabled)
            .card__date
                    .date__entry
                        h3 date Dropdown
                        .input__container
                            p#entry ДД.ММ.ГГГГ
                            label.button__expand(for="entry")
                                include ../../assets/arrows/expand.svg
                    .date__out
                        h3 date Dropdown
                        .input__container
                            p#out 19.08.2019
                            label.button__expand(for="out")
                                include ../../assets/arrows/expand.svg
        .input_samples_small
            .input__date_filter
                .input__title
                    h3 filter date dropdown
                .input__container
                    p#dates=dateStr||'19 авг - 23 авг'
                    label.button__expand(for="dates")
                        include ../../assets/arrows/expand.svg

            .input__subscribe
                .input__title
                    h3 subscription text field
                .input__container
                    input(type="text" placeholder='Email')
                    .input__button
                        include ../../assets/arrows/forward.svg
        .input_samples_checkbox
            h3 Checkbox Buttons 
            include ../../assets/mixins/listCreate.pug
            +listCheckbox(1, ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)'])
        
        .gender_title 
                h3 Radio Buttons  
        .card__gender
              
            .gender_male
                input(id="male", type="radio", name="gender")
                label(for="male")
                    p Мужчина
            .gender_female
                input(id="female", type="radio", name="gender")
                label(for="female")
                    p Женщина
        .card__toggle
            .toggle_text 
                h3 toggle            
            .card__special_offers
                    .special_offers_checkbox
                        .checkbox_dot 
                    p Получать спецпредложения
            .card__special_offers
                    .special_offers_checkbox(class="checked")
                        .checkbox_dot 
                    p Получать спецпредложения
        .button_like_text 
            h3 like button
        .comment_avatar
            include ../../assets/button_like/button_like.pug
            +buttonLike(2)
        .comment_avatar(class="selected")
            +buttonLike(12)
        .rate_button
            h3 rate button
            .rate_examples
                .button_rating1
                .button_rating2    
        .room__list__options_prices
            .price__text
                h3 Range Slider
                p 5 000₽ - 10 000₽
            .price__range
                .range_button-1
                .range_bar
                .range_button-2
        .input_buttons
            .buttons_text
                h3 buttons
            .buttons_example
                include ../../assets/submit-button/submit-button.pug
                .button_row
                    +button('button_example1', 'click me')(class='button')
                    +button('button_example2', 'click me')(class='button clicked')
                .button_row_transparent    
                    +buttonTransparent('button_example3', 'click me')(class='button button__transparent')
                    +buttonTransparent('button_example4', 'click me')(class='button button__transparent clicked')
                .button_row_borderless 
                    h3 click me
                    h3 click me
                .button_row_arrow 
                    +buttona('button_example5', 'перейти к оплате')(class='button button__with_arrow')
        .input_pagination 
            .pagination_text 
                h3 pagination
            .pagination_example
    .input_dropdowns_and_checkbox 
        .dropdowns_column 
            .input_dropdown
                .input__title
                    h3 dropdown
                .dropdown_example
                    .input__container
                        .guests
                            p dropdown
                        label.button__expand(for="guests")
                            include ../../assets/arrows/expand.svg
                    .guest__counter
                        include ../../assets/mixins/counterCreate.pug
                        +counter('спальни', 'кровати', 'ванные комнаты')
                        .apply__buttons
                            h3(class='button__refresh') очистить
                            h3(class='button__apply') применить
            .checkbox_dropdown
                .optional-comfort_dropdown
                    .input__container
                        h3 expandable checkbox list
                        include ../../assets/arrows/expand.svg
                include ../../assets/mixins/listCreate.pug
                +listCheckbox(4, ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь'])
        .dropdown_and_checkbox_column
            .input_dropdown
                .input__title
                    h3 dropdown
                .dropdown_example
                    .input__container
                        .guests
                            p Сколько гостей
                        label.button__expand(for="guests")
                            include ../../assets/arrows/expand.svg
                    .guest__counter
                        include ../../assets/mixins/counterCreate.pug
                        +counter('взрослые', 'дети', 'младенцы')
                        .apply__buttons
                            h3(class='button__refresh') очистить
                            h3(class='button__apply') применить
            .rich_checkbox 
                .checkbox_text 
                    h3 rich Checkbox Buttons
                .checkbox_example 
                    ul
                        .checkbox_list
                            input(id=10 type="checkbox")
                            label(for=10)
                                .checkbox_description
                                    li Широкий коридор
                                    p Ширина коридоров в номере не менее 91 см.
                        .checkbox_list
                            input(id=11 type="checkbox")
                            label(for=11)
                                .checkbox_description
                                    li Помощник для инвалидов
                                    p На 1 этаже вас встретит специалист  и проводит до номера.

        .text__rules_and_cancel_details
            .rules_title 
                h3 bullet list
                .text__rules
                    include ../../assets/mixins/listCreate.pug
                    +listDots('Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00')
    .facilities_and_comments
        .facilities_details
            .details_comfort
                .facilities_icon
                    include ../../assets/room__details__svg/emoji_smile.svg
                .facilities_text
                    p Комфорт
                    p Шумопоглощающие стены
            .details_convenience
                .facilities_icon
                    include ../../assets/room__details__svg/building.svg
                .facilities_text 
                    p Удобство
                    p Окно в каждой из спален
        .text_comments
            .comment_1
                .comment_title
                    .comment_avatar(class="selected")
                        include ../../assets/button_like/button_like.pug
                        +buttonLike(12)
                    .comment_text
                        p Мурад Сарафанов
                        p 5 дней назад
                        p Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.