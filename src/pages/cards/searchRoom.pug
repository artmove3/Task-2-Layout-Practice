.card
    .card__title
        h1 Найдём номера под ваши пожелания
    .card__date
        .date__entry
            h3 прибытие
            .input__container
                input#entry(type='text' class='datepicker datepicker__first' placeholder='ДД.ММ.ГГГГ')
                label.button__expand(for="entry")
                    include ../../assets/arrows/expand.svg
        .date__out
            h3 выезд
            .input__container
                input#out(type='text' class='datepicker datepicker__last' placeholder='ДД.ММ.ГГГГ')
                label.button__expand(for="out")
                    include ../../assets/arrows/expand.svg
    .card__guests
        h3 гости
        .input__container
            //- input#guests(type='text' placeholder='Сколько гостей')
            .guests
                p Сколько гостей
            label.button__expand(for="guests")
                include ../../assets/arrows/expand.svg
        .guest__counter
            include ../../assets/mixins/counterCreate.pug
            +counter('взрослые', 'дети', 'младенцы')
            .apply__buttons
                h3(class='button__refresh') очистить
                h3(class='button__apply') применить


            
    .submit-buttons
        include ../../assets/submit-button/submit-button.pug
        +btna('/foo', 'apply__presets', 'подобрать номер')(class="btn btn__withArrow")
