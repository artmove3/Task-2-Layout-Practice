.room__details
    .room__details_background
        .background__big_image 
        .background__column 
            .background_1 
            .background_2
    .room__details_description.container
        .description_text
            .text_facilities
                .facilities_details
                    h2 Сведения о номере
                    .details_comfort
                        .comfort_icon
                            include ../../assets/room__details__svg/emoji_smile.svg
                        .comfort_text
                            p Комфорт
                            p Шумопоглощающие стены
                    .details_convenience
                        .convenience_icon
                            include ../../assets/room__details__svg/building.svg
                        .convenience_text 
                            p Удобство
                            p Окно в каждой из спален
                    .details_cosiness
                        .cosiness_icon 
                             include ../../assets/room__details__svg/fire.svg
                        .cosiness_text
                            p Уют
                            p Номер оснащён камином
                .description_impression
                    h2 Впечатления от номера
                    .impression_chart
                        canvas(id='myChart')
                        include ../../assets/mixins/listCreate.pug
                        +listDots('Великолепно', 'Хорошо', 'Удовлетворительно', 'Разочарован')
                        .chart_results
                            h1 260
                            h3 голосов

            .text_comments
                .text_comments_title
                    h2 Отзывы посетителей номера
                    p 2 отзыва
                .comment_1
                    .comment_title
                        .comment_avatar
                            include ../../assets/button_like/button_like.pug
                            +btnLike(11)
                        .comment_text
                            p Мурад Сарафанов
                            p 5 дней назад
                            p Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.
                .comment_2
                    .comment_title
                        .comment_avatar
                            include ../../assets/button_like/button_like.pug
                            +btnLike(2)
                        .comment_text
                            p Патрисия Стёклышкова
                            p Неделю назад
                            p Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент
                    
            .text__rules_and_cancel_details
                .text__rules
                    h2 Правила
                    include ../../assets/mixins/listCreate.pug
                    +listDots('Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00')
                .text__cancel_details 
                    h2 Отмена
                    p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
        .room__details_total_price
            .card
                .card__number_and_price
                    .card__number
                        p № 
                        h1 888
                        h3 люкс

                    .card__price_per_day
                        h3 9 990₽
                        p в сутки
                .card__date
                    .date__entry
                        h3 прибытие
                        .input__container
                            p#entry=dateStrEntry||'ДД.ММ.ГГГГ'
                            label.button__expand(for="entry")
                                include ../../assets/arrows/expand.svg
                    .date__out
                        h3 выезд
                        .input__container
                            p#out=dateStrOut||'ДД.ММ.ГГГГ'
                            label.button__expand(for="out")
                                include ../../assets/arrows/expand.svg
                .card__guests
                    h3 гости
                    .input__container
                        .guests
                            p#guests=counterStr
                        label.button__expand(for="guests")
                            include ../../assets/arrows/expand.svg
                    .guest__counter
                        include ../../assets/mixins/counterCreate.pug
                        +counter('взрослые', 'дети', 'младенцы')
                        .apply__buttons
                            h3(class='button__refresh') очистить
                            h3(class='button__apply') применить
                .card__calculate_price 
                    .price_math 
                        p 9 990₽ х 4 суток
                    .price_total 
                        p 39 960₽
                .card__service
                    .service_price 
                        p Сбор за услуги: скидка 2 179₽
                        include ../../assets/room__details__svg/info_circle.svg
                    .service_total
                        p 0₽
                .card__additional_service 
                    .additional_service_price 
                        p Сбор за дополнительные услуги
                        include ../../assets/room__details__svg/info_circle.svg
                    .additional_service_total 
                        p 300₽
                .card__total_price 
                    h2 Итого
                    .dotted_underline 
                    h2 38 081₽

                        
                .submit-buttons
                    include ../../assets/submit-button/submit-button.pug
                    +btna('apply__presets', 'забронировать')(class="btn btn__withArrow")
