mixin counter(...items)
    each item, index in items
        .counter__cell
            .counter__title
                h3= item
            .counter__controller
                label(for=index)
                    button(class='button__minus' disabled) -
                input(id=index type='text' class='counter' value=0 inputmode='numeric')
                label(for=index)
                    button(class='button__plus') +
